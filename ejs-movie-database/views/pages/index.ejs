<!--EJS means embedded javascript. Basically html files that you can stick javascript into.-->

<!-- <%= %> use equal sign for a value-->
<!-- <% %> use no equal sign for plain javascript-->

<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles.css">        
    </head>

    <body>
        <div class="container">

            <h1 class="text-center" style="padding-bottom: 20px;">The <span>Haunted</span> Movie Database</h1>
                <form class="searchForm" class="text-center">
                    <div class="row">
                        <div class="col-md-11 col-sm-11 col-xs-10" class="form-group">
                            <input type="text" class="form-control" id="search-button" placeholder="...a Halloween special edition.">
                        </div>
                        <div class="col-md-1 col-sm-1 col-xs-1" class="form-group" class="home-search-button">
                            <button type="button" class="btn btn-warning btn-sm search-button">Search</button>
                        </div>
                    </div>
                </form>

            <div class="row">

                <div class="jumbotron">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/pJBRQQkT85s" style="align: center;"></iframe>
                    </div>
                </div>

            </div>

            <div class="text-center">
                <h3>Featured Movies</h3>
            </div>

<!--Repeat below html structure until you go through all movies that exist in hardcoded database.-->
            <% for (var i = 0; i < movies.length; i++) {  %> 

            <a class="movie-link" href=<%= '/movie/' + movies[i].id %>>
            <div class="media movie-list-item">
                <div class="media-left">
                    <div class="poster-container">
                        <img class="media-object movie-poster" src=<%= movies[i].poster %> />
                    </div>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= movies[i].title %>
                        <span class="badge"><%= movies[i].imdbRating %></span>
                    </h4>
                    <div>
                        <%= movies[i].plot %>
                    </div>
                    <div class="released-date">
                        Released: <%= movies[i].released %>
                    </div>
                </div>
            </div>
            </a>
            
            <% } %>

        </div>
    
    <script src="https://code.jquery.com/jquery-2.2.2.min.js" integrity="sha256-36cp2Co+/62rEAAYHLmRCPIych47CvdM+uTBJwSzWjI="   crossorigin="anonymous"></script>
    <script>

        $(".search-button").click(function() {
            var searchitem = $("#search-button").val();
            console.log("Click button works.");
            window.location.href = "/searchresults/" + searchitem;
        });

    </script>

    </body>

</html>

